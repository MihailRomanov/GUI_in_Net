<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="200"
        Width="300" Height="300" 
        x:Class="AvaloniaApplication1.MainWindow"
        Title="AvaloniaApplication1">
  <DockPanel>
    <Menu DockPanel.Dock="Top">
      <MenuItem Header="Файл">
        <MenuItem Header="Создать" Command="{Binding Path=Create}"/>
        <MenuItem Header="Открыть" Command="{Binding Path=Open}"/>
        <Separator />
        <MenuItem Header="Выйти" Command="{Binding Path=Quit}"/>
      </MenuItem>
      <MenuItem Header="Генерировать" Command="{Binding Path=Generate}" />
      <MenuItem Header="Справка"/>
    </Menu>
    <StackPanel></StackPanel>
  </DockPanel>
</Window>
